{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "noEmitOnError": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@SharedComponents/*": ["./src/_SharedComponents/*"],
      "@SharedData/*": ["./src/_SharedData/*"],
      "@public/*": ["./public/*"],
      "@dictionaries/*": ["./src/app/[lang]/dictionaries/*"],
      "@redux/*": ["./src/redux/*"],
      "@utils/*": ["./src/_Utils/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
